!!!5
%html
  %head
    %title= t("app.name")
    %meta{ content: t("app.author"), name: "author" }
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    = render partial: "layouts/navigation", locals: {app_name: t("app.name")}

    .container
      = render partial: "layouts/flash"

      .row
        .col-lg-12
          = yield